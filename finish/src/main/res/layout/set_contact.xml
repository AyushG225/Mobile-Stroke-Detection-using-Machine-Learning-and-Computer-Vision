<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#390879"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/setcontacttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Emergency Contact"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#b8df10"
            android:textSize="34sp"
            android:fontFamily="@font/opensans"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id = "@+id/setcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="#b8df10"
            android:textColor="#b8df10"
            android:textSize="20sp"
            android:textColorHint="#b8df10"
            android:fontFamily="@font/opensans"
            android:hint="Set Emergency Contact"
            android:inputType="number"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
<!--            <LinearLayout-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="center">-->
<!--                -->
<!--            </LinearLayout>-->
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <android.widget.Button
                android:id="@+id/save"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/homescreentitle"
                android:backgroundTint="#b8df10"
                android:gravity="center"
                android:minHeight="48dp"
                android:textSize="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/oval"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="@font/opensans"
                android:onClick="onClick"
                android:text="Save"
                android:textColor="#390879"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

            <android.widget.Button
                android:id="@+id/retrieve"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homescreentitle"
                android:backgroundTint="#b8df10"
                android:gravity="center"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:textSize="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/oval"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="@font/opensans"
                android:onClick="onClick"
                android:text="Retrieve"
                android:textColor="#390879"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

            <android.widget.Button
                android:id="@+id/clear"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homescreentitle"
                android:backgroundTint="#b8df10"
                android:gravity="center"
                android:minHeight="48dp"
                android:layout_weight="1"
                android:textSize="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/oval"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="@font/opensans"
                android:onClick="onClick"
                android:text="Clear"
                android:textColor="#390879"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

        </LinearLayout>
        <android.widget.Button
            android:padding="10dp"
            android:id="@+id/goback"
            style="@style/Widget.AppCompat.Button"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#390879"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/opensans"
            android:layout_gravity="center"
            android:background="@drawable/oval"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:text="Go Back"/>
        <TextView
            android:id="@+id/contactstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans"
            android:visibility="gone"
            android:text="Status"
            android:textAlignment="center"
            android:textColor="#b8df10"
            android:textSize="35dp"
            android:textStyle="bold" />



    </LinearLayout>
</RelativeLayout>