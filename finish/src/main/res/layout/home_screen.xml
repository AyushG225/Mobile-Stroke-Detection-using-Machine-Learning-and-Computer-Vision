<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#390879"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/homescreentitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans"
            android:text="@string/stroke_detector"
            android:textAlignment="center"
            android:textColor="#b8df10"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/fast"
            android:scaleType="fitXY"
            android:src="@drawable/fast" />
        <android.widget.Button
            android:id="@+id/setcontact"
            android:layout_marginBottom="20dp"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Set Emergency Contact"
            android:textSize="30dp"
            android:textColor="#390879"
            android:textStyle="bold"
            android:padding = "10dp"
            android:textAllCaps="false"
            android:fontFamily="@font/opensans"
            android:layout_gravity="center"
            android:background="@drawable/oval"/>

        <android.widget.Button
            android:id="@+id/startdetection"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:onClick="onClick"
            android:text="Start"
            android:textSize="30dp"
            android:textColor="#390879"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/opensans"
            android:layout_gravity="center"
            android:background="@drawable/oval">
            <!--            android:background="@drawable/oval"-->

            <!--            style="?android:attr/buttonBarButtonStyle"-->

            <!--            android:gravity="center"-->
            <!--            android:onClick="onClick"-->
            <!--            android:text="@string/start_detection"-->
            <!--            android:textColor="#390879">-->

        </android.widget.Button>

        <!--        <TextView-->
        <!--            android:id="@+id/strokedescription"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:fontFamily="@font/sora"-->
        <!--            android:text="@string/stroke_description"-->
        <!--            android:textColor="@color/white" />-->


    </LinearLayout>
</RelativeLayout>